@page "/MagicNumber"
@inject MagicNumberService magicNumberService;

<div class="border border-primary rounded p-3">
    <h2>MagicNumber</h2>

    <p class="text-center">The 6 magic numbers are: </p>
        <div class="container-fluid">
            <div class="row">
                <div class="text-center col-md-6 col-md-3 col-lg-4 bg-danger">@magicNumberService.GetMagicNumber(1)</div>
                <div class="text-center col-md-6 col-md-3 col-lg-4 bg-info">@magicNumberService.GetMagicNumber(1)</div>
                <div class="text-center col-md-12 col-md-6 col-lg-4 bg-primary">@magicNumberService.GetMagicNumber(1)</div>
            </div>
            <div class="row">
                <div class="text-center col-6 bg-danger">@magicNumberService.GetMagicNumber(1)</div>
                <div class="text-center col-4 bg-info">@magicNumberService.GetMagicNumber(1)</div>
                <div class="text-center col-2 bg-primary">@magicNumberService.GetMagicNumber(1)</div>
            </div>
        </div>
</div>
